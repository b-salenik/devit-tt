<div x-data="templateSwitch('login')" class="container max-w-screen-sm">
  <div
    x-show="active === 'login'"
    key="login"
  >
    {% render 'layout-account-login' %}
  </div>

  <div
    x-show="active === 'forgot-password'"
    key="forgot-password"
  >
    {% render 'layout-account-forgot-password' %}
  </div>
</div>